<h1>Listing posts</h1>

<table>
  <tr>
  	<th>#</th>
    <th>Elo</th>
    <th>Team name</th>
  </tr>

<% @posts.each_with_index do |post, index| %>
  <tr>
    <td><%= index+1 if is_eligible(post.team_name)%></td>
    <td><%= post.team_elo if is_eligible(post.team_name)%></td>
    <td><%= post.team_name if is_eligible(post.team_name)%></td>

  </tr>
<% end %>
</table>

